<Window x:Class="watchrlagswitch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:watchrlagswitch"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock>lagswitch by watchr</TextBlock>
        <TextBlock Grid.Row="1" Name="StateText">State: OFF</TextBlock>
        <Button Grid.Row="2" Name="StartButton" FontSize="24" Click="StartButton_Click">START</Button>
        <Button Grid.Row="3" Name="StopButton" FontSize="24" Click="StopButton_Click">STOP</Button>
    </Grid>
</Window>
